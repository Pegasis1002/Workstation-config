})

-- AUTO-MKDIR: Robust Version
vim.api.nvim_create_autocmd("BufWritePre", {
    pattern = "*",
    group = vim.api.nvim_create_augroup("auto_create_dir", { clear = true }),
    callback = function(ctx)
        -- 1. Get the full directory path of the file you are about to save
        local dir = vim.fn.fnamemodify(ctx.file, ":p:h")
        
        -- 2. check if it is a URL (don't try to mkdir https://...)
        if ctx.file:match("^[a-z]+://") then return end

        -- 3. If directory doesn't exist, create it (mkdir -p)
        if vim.fn.isdirectory(dir) == 0 then
            vim.fn.mkdir(dir, "p")
        end
    end
})
